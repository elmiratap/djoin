<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/tvDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:text="Destination"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvSeats"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvDestination"
        android:layout_height="wrap_content"
        android:text="_ seats left"
        android:layout_marginTop="5dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tvTripDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Today 6:00PM"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tvTripId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="id here"/>

    <Button
        android:id="@+id/btnCancel"
        android:text="Cancel"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvTripDateTime"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Trip"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_below="@+id/tvTripDateTime"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnLeave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/tvTripDateTime"
        android:layout_marginTop="5dp"
        android:text="Leave"
        android:layout_alignParentRight="true"/>


</RelativeLayout><!-- From: file:/C:/Users/elmira/djoin/app/src/main/res/layout/list_view.xml -->